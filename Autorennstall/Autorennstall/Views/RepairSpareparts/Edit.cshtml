@model Autorennstall.Models.RepairSparepart

@{
    ViewBag.Title = "Editieren";
}

<h2>Editieren</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Einzelteil</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RepairSparepartID)

        <div class="form-group">
            @Html.LabelFor(model => model.RepairID, "RepairID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RepairID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RepairID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SparepartID, "SparepartID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SparepartID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SparepartID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Speichern" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Zurück", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
