@model IEnumerable<FormelOne.Models.Team>

@{
    ViewBag.Title = "Teams";
}

<h2>Teams</h2>

<p>
    @Html.ActionLink("Hinzufügen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DriverAmount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DriverAmount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TeamId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TeamId })
        </td>
    </tr>
}

</table>
